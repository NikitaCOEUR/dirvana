{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/NikitaCOEUR/dirvana/main/schema/dirvana.schema.json",
  "$ref": "#/$defs/SchemaConfig",
  "$defs": {
    "AliasConfig": {
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1,
          "description": "Command to execute"
        },
        "completion": {
          "$ref": "#/$defs/CompletionValue",
          "description": "Completion configuration (optional)"
        },
        "when": {
          "$ref": "#/$defs/Condition",
          "description": "Conditions that must be met for the alias to execute"
        },
        "else": {
          "type": "string",
          "description": "Fallback command to execute if conditions are not met"
        }
      },
      "type": "object",
      "required": [
        "command"
      ]
    },
    "AliasValue": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "description": "Simple alias: command to execute (auto-detects completion)"
        },
        {
          "$ref": "#/$defs/AliasConfig"
        }
      ]
    },
    "CompletionConfig": {
      "properties": {
        "bash": {
          "type": "string",
          "description": "Bash completion code"
        },
        "zsh": {
          "type": "string",
          "description": "Zsh completion code"
        }
      },
      "type": "object"
    },
    "CompletionValue": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "description": "Inherit completion from another command (e.g., 'git')"
        },
        {
          "type": "boolean",
          "description": "Set to false to disable completion"
        },
        {
          "$ref": "#/$defs/CompletionConfig"
        }
      ]
    },
    "Condition": {
      "properties": {
        "file": {
          "type": "string",
          "description": "Path to file that must exist (supports env var expansion like $VAR)"
        },
        "var": {
          "type": "string",
          "description": "Environment variable that must be set and non-empty"
        },
        "dir": {
          "type": "string",
          "description": "Path to directory that must exist (supports env var expansion)"
        },
        "command": {
          "type": "string",
          "description": "Command that must exist in PATH"
        },
        "all": {
          "items": {
            "$ref": "#/$defs/Condition"
          },
          "type": "array",
          "minItems": 1,
          "description": "All conditions must be true (AND logic)"
        },
        "any": {
          "items": {
            "$ref": "#/$defs/Condition"
          },
          "type": "array",
          "minItems": 1,
          "description": "At least one condition must be true (OR logic)"
        }
      },
      "type": "object"
    },
    "EnvConfig": {
      "properties": {
        "sh": {
          "type": "string",
          "minLength": 1,
          "description": "Shell command to execute (output becomes env var value)"
        },
        "value": {
          "type": "string",
          "description": "Alternative: static value (use string directly instead)"
        }
      },
      "type": "object"
    },
    "EnvValue": {
      "oneOf": [
        {
          "type": "string",
          "description": "Static environment variable value"
        },
        {
          "$ref": "#/$defs/EnvConfig"
        }
      ]
    },
    "SchemaConfig": {
      "properties": {
        "aliases": {
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_-]*$": {
              "$ref": "#/$defs/AliasValue"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "description": "Shell aliases - shortcuts for common commands"
        },
        "functions": {
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_-]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "description": "Shell functions - reusable command sequences"
        },
        "env": {
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "$ref": "#/$defs/EnvValue"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "description": "Environment variables (static or dynamic via shell commands)"
        },
        "local_only": {
          "type": "boolean",
          "description": "If true only use this directory's config (don't merge with parent configs)",
          "default": false
        },
        "ignore_global": {
          "type": "boolean",
          "description": "If true ignore global config (start fresh from this directory)",
          "default": false
        }
      },
      "type": "object"
    }
  },
  "title": "Dirvana Configuration",
  "description": "Configuration file for Dirvana - Reach directory nirvana"
}